<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterPhoneActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:text="Enter your mobile number"
        android:fontFamily="@font/sf"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Mobile number"
        android:textSize="15sp"
        android:fontFamily="@font/sf"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:padding="12dp"
            />
        <EditText
            android:layout_width="200dp"
            android:id="@+id/pnumberT"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:inputType="number"
            android:hint="Phone Number"
            android:textColor="@color/colorPrimary"
            android:maxLength="9"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <com.appz.abhi.simplebutton.SimpleButton
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/submitB"
        android:padding="16dp"
        android:text="Submit"
        android:fontFamily="@font/sf"
        android:layout_marginTop="10dp"
        app:button_background_color="@color/colorPrimary"
        app:button_pressed_color="@color/colorPrimary"
        app:button_shape="fillet"
        app:button_text_color="@color/white"
        app:button_type="solid"
        tools:ignore="HardcodedText" />
</LinearLayout>